
<% include ../partialsdetail/headers.ejs %>
<div class="mt-5">
  <form action="" method="post">
  <div class="container">
    <h1>Users Admin Only</h1>
    
    
    <div class="form-group row">
      <label for="id" class="col-sm-2 col-form-label">
        <input type="checkbox" name="cekid" id="id" value="valid">User ID</input></label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="userid" name="userid" placeholder="ID">
        </div>
    </div>
    
    <div class="form-group row">
      <label for="string" class="col-sm-2 col-form-label">
        <input type="checkbox" name="cekstring" id="str" value="name">First Name</input></label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="firstname" name="firstname" placeholder="First name">
        </div>
    </div>

    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Position</label>
        <div class="col-sm-10">
            <select name="progres" class="form-control">
                <option value="manager">Manager</option>
                <option value="software">Software Developer</option>
                <option value="quality">Quality Assurance</option>
            </select>
        </div>
    </div>
   
    
    <div class="form-group row">
      <button type="submit" class="btn btn-primary" style="border-radius: 20px;">Search</button>
    </div>
      
    </form>
  </div>

  <div class="container">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Position</th>
          <th>Working Status</th>
        </tr>
      </thead>
      <tbody>
        
        <%for (let i = 0; i < model.length; i++) {%>
          <tr>
          <td><a href="projects/overview"><%=model[i].userid%></a></td>
          <th><%=model[i].firstname%></th>
          <th><%=model[i].role%></th>
          <th><%=model[i].work_status%></th>
        <td>
          <a type="button" class="btn btn-success" href="users/edit/<%=model[i].userid%>">Edit</a>
          
           <a type="button" class="btn btn-danger" href="users/submitdel/<%=model[i].userid%>">Delete</a></td>
        </tr>
        <%}%>
        
      </tbody>
    </table>
  </div>
  <nav aria-label="Page navigation">
    <ul class="pagination">
      <li>
        
            </ul>
        </nav>

  <div class="container">

    <button type="button" class="btn btn-primary"><a href="users/add">Add</a></button>

  </div>

  

</form>
 
