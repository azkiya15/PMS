
<% include ../partialsdetail/headers.ejs %>
<div class="mt-5">
<body>
<div class="container" style="padding-top: 20px">
    <form action="/projects/members/<%= projectid %>/submitedit/<%= data.id %>" method="POST">
      <input type="hidden" name="page" value="1" />
  
      <!---------Menampilkan box id------->
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">Nama</label>
        <div class="col-sm-8">
          <input type="text" class="form-control"  id="firstname" name="fullname" 
            value="<%= data.fullname %>" readonly
          />
        </div>
      </div>


      <div class="form-group row">
        <label for="position" class="col-sm-2 col-form-label">
          Position</label>
        <div class="col-sm-10">
            
                <div class="custom-control custom-radio">
                    <input type="radio" id="manager" name="position" value="Manager"
                        class="custom-control-input" <%= data.role == "Manager" ? ' checked': ''%>>
                    <label class="custom-control-label" for="manager">Manager</label>
                </div>
           
                <div class="custom-control custom-radio">
                    <input type="radio" id="softwaredeveloper" name="position" value="Software Developer"
                        class="custom-control-input" <%= data.role == "Software Developer" ? ' checked': ''%>>
                    <label class="custom-control-label" for="softwaredeveloper">Software Developer</label>
                </div>
                        
                <div class="custom-control custom-radio">
                    <input type="radio" id="qualityassurance" name="position" value="Quality Assurance"
                        class="custom-control-input" <%= data.role == "Quality Assurance" ? ' checked': ''%>>
                    <label class="custom-control-label" for="qualityassurance">Quality Assurance</label>
                </div>
           
        </div>
    </div>

      <button type="submit" class="btn btn-primary" style="border-radius: 10px;">
        Update
      </button>
    </form>
  </div>