<% include ../partialsdetail/headers.ejs %>
<div class="mt-5">
  
<body>
  <form action="/projects/submitedit/<%= projectid %>" method="post">
    <div class="container">
      <h2>Edit Data</h2>
      <br/>

      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">
          Name project</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" value="<%= projectName %>"/>
          </div>
        </div>

      <div class="form-group row">
        <label for="member" class="col-sm-2 col-form-label">
          Member</label>
          <div class="col-sm-10">
            <% users.forEach((item) => { %>
              <div class="custom-control custom-checkbox my-1 mr-sm-2">
                  <input type="checkbox" class="custom-control-input" id="customControlInline<%=item.userid%>"
                      name="member" value="'<%= item.role %>', <%= item.userid%>" <%= item.isChecked  ? ' checked': ''%>>
                  <label class="custom-control-label"
                      for="customControlInline<%=item.userid%>"><%= item.fullname %></label>
              </div>
              <% })%>
          </div>
        </div>

      <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
  
  
      <div class="form-group row">
       
      </div>
    </div>
    
  </form>



    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>

    
  </body>
</html>